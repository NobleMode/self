  <!-- Main Display-->

  <div class="flex flex-row items-start space-x-16">
    <!--avatar-->
    <div class="flex flex-col">
      <div class="border border-red-800 w-48 rounded-full shadow-md p-7 mt-36 mx-28">
        <img
          src="https://cdn.ketnoibongda.vn/upload/images/12022330-845928092188375-8890160160420757664-o-2021-06-07.png"
          alt="JS Club" />
      </div>

      <p class="text-[#ad0214] font-bold text-center text-2xl mt-4">{{editaction}}Profile</p>
    </div>
    <div class="flex flex-col w-full">

      <!--Information-->
      <form id="updateInsert" class="flex flex-row items-center justify-evenly rounded-2xl bg-red-50 h-96 mt-32 me-24 place-content-center p-4">
        <div class="flex flex-row h-full">
          <div class="flex flex-col justify-evenly w-36 text-center text-white">
            <div class="font-bold bg-[#ad0214] rounded-xl py-2">Họ và Tên</div>
            <div class="font-bold bg-[#ad0214] rounded-xl py-2">Ban</div>
            <div class="font-bold bg-[#ad0214] rounded-xl py-2">Vai trò</div>
            <div class="font-bold bg-[#ad0214] rounded-xl py-2">Gen</div>
            <div class="font-bold bg-[#ad0214] rounded-xl py-2">Gmail</div>
            <div class="font-bold bg-[#ad0214] rounded-xl py-2">Địa chỉ</div>
          </div>

