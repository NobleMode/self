            </label>

            <!-- Date of birth -->
            <div class="relative max-w-sm">
              <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                <svg class="w-4 h-4 text-[#ad0214]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                </svg>
              </div>
              <input datepicker datepicker-orientation="bottom right" datepicker-format="dd/mm/yyyy" value="{{ editdob }}" type="text" class="bg-white border border-[#ad0214] text-[#ad0214] text-sm rounded-lg block w-full ps-10 p-2.5" placeholder="Select date" id="dob">
            </div>

            <!-- School Gen -->
            <label class="input border bg-white border-\[3px\] border-[#ad0214] rounded-2xl flex items-center gap-2">
                <input type="number" class="grow" id="khoa" placeholder="School Gen" value="{{ editkhoa }}" style="color: #ad0214;" required />
            </label>

            <!-- Phone -->
            <label class="input border bg-white border-\[3px\] border-[#ad0214] rounded-2xl flex items-center gap-2">
                <input type="text" class="grow" id="phone" placeholder="Phone" value="{{ editphone }}" style="color: #ad0214;" required />
            </label>

            <!-- Facebook -->
            <label class="input border bg-white border-\[3px\] border-[#ad0214] rounded-2xl flex items-center gap-2">
                <input type="text" class="grow" id="fb" placeholder="Facebook Profile Link" value="{{ editfb }}" style="color: #ad0214;" required />
            </label>
          </div>
        </div>
        
        <div class="border border-[#ad0214] border-solid h-[90%] border-opacity-50"></div>

        <div class="flex flex-col justify-center mt-4">
          <button id="confirm" class="bg-green-600 hover:bg-green-700 text-white w-32 font-bold py-2 px-4 rounded my-2">Confirm</button>
          <button onclick="window.location.href='/infor'" id="cancel" class="bg-gray-500 hover:bg-red-500 text-white w-32 font-bold py-2 px-4 rounded my-2">Cancel</button>
        </div>
      </form>


    </div>
  </div>

  <!-- Main Display-->
</body>

<script>
  window.onload = function () {
    document.querySelectorAll('.dropdown-item-1').forEach(item => {
      item.addEventListener('click', event => {
        event.preventDefault();
        const dropdownButton = document.getElementById('dept');
        dropdownButton.innerHTML = event.target.innerHTML;

        showHide(dropdownButton);
      });
    });

    document.querySelectorAll('.dropdown-item-2').forEach(item => {
      item.addEventListener('click', event => {
        event.preventDefault();
        const dropdownButton = document.getElementById('role');
        dropdownButton.innerHTML = event.target.innerHTML;
      });
    });
  };

  document.getElementById('updateInsert').addEventListener('submit', (event) => {
    event.preventDefault(); 

    const name = document.getElementById('name').value;
    const dept = document.getElementById('dept').innerHTML;
    const role = document.getElementById('role').innerHTML;
    const mail = document.getElementById('mail').value;
    const loc = document.getElementById('loc').value;
    const username = document.getElementById('username').value;
    const rollno = document.getElementById('rollno').value;
    const dob = document.getElementById('dob').value;
    const phone = document.getElementById('phone').value;
    const gen = document.getElementById('gen').value;
    const khoa = document.getElementById('khoa').value;
    const fb = document.getElementById('fb').value;

    if (name === '' || mail === '' || loc === '' || username === '' || rollno === '' || dob === '' || phone === '' || gen === '') {
      alert('Please fill in all fields');
      return;
    }

    if (dept === 'Chọn Ban' || role === 'Chọn Vai Trò') {
      alert('Please select a department and role');
      return;
    }
    
    fetch('/updateInsert/post', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        name: name,
        dept: dept,
        role: role,
        mail: mail,
        loc: loc,
        username: username,
        rollno: rollno.toLowerCase(),
        dob: dob,
        phone: phone,
        gen: gen,
        khoa: khoa,
        fb: fb,
      }),
    })
      .then(response => response.json())
      .then((data) => {
        console.log('Success:', data);
      })
      .catch((error) => {
        console.error('Error:', error);
      });
  });


</script>

</html>