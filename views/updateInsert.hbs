              <ul class="dropdown-content z-[1] menu p-2 shadow bg-red-50 rounded-box w-52 text-red-800 font-medium">
                <li><a href="#" class="dropdown-item-1">Chuyên Môn</a></li>
                <li><a href="#" class="dropdown-item-1">Truyền Thông</a></li>
                <li><a href="#" class="dropdown-item-1">Đối Ngoại</a></li>
                <li><a href="#" class="dropdown-item-1">Văn Hóa</a></li>
                <li><a href="#" class="dropdown-item-1">Nội Dung</a></li>
              </ul>
            </div>

            <!-- Role -->
            <div class="dropdown">
              <div id="role" tabindex="0" role="button"
                class="btn w-48 bg-[#ad0214] text-white hover:bg-red-900 border-none">{{#if editdept}}{{ editrole }}{{else}}Chọn Vai Trò{{/if}}</div>
              <ul class="dropdown-content z-[1] menu p-2 shadow bg-red-50 rounded-box w-52 text-red-800 font-medium">
                <li><a href="#" class="dropdown-item-2">Chủ Nhiệm</a></li>
                <li><a href="#" class="dropdown-item-2">Phó Chủ nhiệm</a></li>
                <li><a href="#" class="dropdown-item-2">Trưởng Ban</a></li>
                <li><a href="#" class="dropdown-item-2">Thành Viên</a></li>
                <li><a href="#" class="dropdown-item-2">Cộng Tác Viên</a></li>
              </ul>
            </div>
            
            <!-- Gen -->
            <label class="input border bg-white border-\[3px\] border-[#ad0214] rounded-2xl flex items-center gap-2">
                <input type="number" class="grow" id="gen" placeholder="Member's Gen" value="{{ editgen }}" style="color: #ad0214;" required />
            </label>

            <!-- Mail -->
            <label class="input border bg-white border-\[3px\] border-[#ad0214] rounded-2xl flex items-center gap-2">
